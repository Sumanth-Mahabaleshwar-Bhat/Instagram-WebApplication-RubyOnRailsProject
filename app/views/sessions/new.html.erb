<div class="container">
  <div class="box">
    <div class="heading"></div>
    <%= form_with(model: User.new, url: sessions_path) do |f| %>
      <div class="field">
        <%= f.label :'Username' %> <br>
        <br>
        <%= f.text_field :user_name %>
      </div>
      <div class="field">
        <%= f.label :'Password' %> <br>
        <br>
        <%= f.password_field :password %>
      </div>
      <div class="login-button">
        <button class="login-button" title="login">Log In</button>
      </div>
    <% end %>
  </div>
  <div class="box">
    <p>Don't have an account?</p>
    <div class="signup">
      <%= link_to "Sign up", new_user_path %>
    </div>
  </div>
</div>
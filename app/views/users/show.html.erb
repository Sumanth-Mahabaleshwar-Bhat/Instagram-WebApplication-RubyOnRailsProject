<p style="color: green"><%= notice %></p>

<div class="userProfile-container">
  <div class="profile">
    <div class="profileImage">
      <%= image_tag url_for(@user_profile.avatar), size: "600x400" %>
      <br>
    </div>
    <div class="edit-UserProfile">
      <%= button_to "Edit Profile", edit_user_profile_path(@user_profile) %>
    </div>
    <div class="profile-bio">
      <p><%= @user_profile.bio %></p>
    </div>
  </div>
</div>

<div>
  <%= link_to "Back to user profiles", user_profiles_path %>

  <%= button_to "Destroy this user profile", @user_profile, method: :delete %>
</div>

<h1>New user</h1>

<%= form_for :user, url: '/users' do |f|%>
  <div>
    <%= f.text_field :user_name, :placeholder => "User Name" %>
    <%= f.text_field :first_name, :placeholder => "First Name" %>
    <%= f.text_field :last_name, :placeholder => "Last Name" %>
    <%= f.phone_field :phone_number, :placeholder => "Phone number" %>
    <%= f.email_field :email_address, :placeholder => "Email" %>
    <%= f.password_field :password_digest, :placeholder => "Password" %>
    <%= f.submit "Create an account", class: "btn-submit" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to users", users_path %>
</div>
